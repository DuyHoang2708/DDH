@model DDH.Models.Brand

@{
    ViewData["Title"] = "Thêm thương hiệu mới";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-lg mt-4">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-plus me-2"></i>Thêm thương hiệu mới
                    </h4>
                </div>
                <div class="card-body">
                    @* ✅ Hiển thị thông báo *@
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @using (Html.BeginForm("CreateBrands", "Brands", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        <div class="row">
                            <div class="col-md-12">
                                <div class="mb-3">
                                    @Html.LabelFor(m => m.Name, "Tên thương hiệu *", new { @class = "form-label fw-bold" })
                                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Nhập tên thương hiệu..." })
                                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    @Html.LabelFor(m => m.IsActive, "Trạng thái", new { @class = "form-label fw-bold" })
                                    @Html.DropDownListFor(m => m.IsActive, new List<SelectListItem>
                                    {
                                        new SelectListItem { Text = "Hiển thị", Value = "true", Selected = true },
                                        new SelectListItem { Text = "Ẩn", Value = "false" }
                                    }, new { @class = "form-select" })
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Quay lại
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Tạo thương hiệu
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        setTimeout(() => $('.alert').fadeOut('slow'), 4000);
    </script>
}

<style>
    h4 {
        font-size: 20px;
    }
    .card {
        border-radius: 10px;
        overflow: hidden;
    }
    .form-label {
        color: #2c3e50;
        font-size: 15px;
    }
</style>
