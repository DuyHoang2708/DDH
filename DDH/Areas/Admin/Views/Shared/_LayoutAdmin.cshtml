@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Quản trị cửa hàng thời trang</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', sans-serif;
        }

        /* Sidebar */
        .sidebar {
            width: 250px;
            background-color: #212529;
            position: fixed;
            top: 0;
            bottom: 0;
            color: white;
            padding-top: 1rem;
        }

            .sidebar a {
                color: #adb5bd;
                text-decoration: none;
                display: block;
                padding: 10px 20px;
                transition: all 0.2s;
            }

                .sidebar a:hover, .sidebar a.active {
                    background-color: #0d6efd;
                    color: white;
                }

        /* Header */
        .admin-header {
            background-color: #fff;
            border-bottom: 1px solid #dee2e6;
            padding: 10px 20px;
            position: sticky;
            top: 0;
            z-index: 1000;
        }

        /* Main content */
        .content {
            margin-left: 250px;
            padding: 20px;
            min-height: 100vh;
        }

        /* Footer */
        footer {
            text-align: center;
            color: #6c757d;
            border-top: 1px solid #dee2e6;
            padding: 15px 0;
        }

        /* Responsive */
        <style >
        @@media (max-width: 768px) {
            .sidebar

        {
            width: 100%;
            position: relative;
        }

        .content {
            margin-left: 0;
        }

        }
    </style>


    </style>
</head>

<body>
    <!-- Sidebar -->
    <nav class="sidebar">
        <div class="text-center mb-4">
            <h5 class="text-white">🛍️ Quản trị DDH</h5>
        </div>
        <a href="/Admin/Products/ListProducts" class="active"><i class="bi bi-box-seam me-2"></i>Sản phẩm</a>
        <a href="/Admin/Categories/ListCategories"><i class="bi bi-tags me-2"></i>Danh mục</a>
        <a href="/Admin/Brands/ListBrands"><i class="bi bi-building me-2"></i>Thương hiệu</a>
        <a href="/Admin/Orders/ListOrders"><i class="bi bi-receipt me-2"></i>Đơn hàng</a>
        <a href="/Admin/Users/ListUsers"><i class="bi bi-people me-2"></i>Người dùng</a>
        <a href="/"><i class="bi bi-house-door me-2"></i>Về trang chủ</a>
        <a href="#"><i class="bi bi-box-arrow-right me-2"></i>Đăng xuất</a>
    </nav>

    <!-- Header -->
    <header class="admin-header d-flex justify-content-between align-items-center">
        <h5 class="m-0">@ViewData["Title"]</h5>
        <div>
            <span class="me-3"><i class="bi bi-person-circle"></i> Admin</span>
            <a href="/" class="btn btn-sm btn-outline-secondary"><i class="bi bi-box-arrow-left"></i> Đăng xuất</a>
        </div>
    </header>

    <!-- Main content -->
    <main class="content">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer>
        © 2025 - Hệ thống quản trị cửa hàng thời trang DDH
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
