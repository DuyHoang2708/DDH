@model IEnumerable<DDH.Models.Account>
@{
    ViewData["Title"] = "Quản lý người dùng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="bg-gradient-primary p-4 rounded-4 d-flex justify-content-between align-items-center"
         style="background: linear-gradient(90deg, #6a11cb 0%, #2575fc 100%); color: white;">
        <div>
            <h2 class="fw-bold mb-0"><i class="fa fa-users me-2"></i> Quản lý người dùng</h2>
            <p class="mb-0 opacity-75">Quản lý tất cả người dùng trong hệ thống</p>
        </div>
    </div>

    <!-- Thống kê -->
    <div class="row mt-4 g-3">
        <div class="col-md-3">
            <div class="card text-center shadow-sm border-0">
                <div class="card-body">
                    <i class="fa fa-users fa-2x text-primary mb-2"></i>
                    <h5 class="fw-bold">@ViewBag.TotalUsers</h5>
                    <p class="text-muted mb-0">Tổng người dùng</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center shadow-sm border-0">
                <div class="card-body">
                    <i class="fa fa-user-check fa-2x text-success mb-2"></i>
                    <h5 class="fw-bold">@ViewBag.ActiveUsers</h5>
                    <p class="text-muted mb-0">Đang hoạt động</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center shadow-sm border-0">
                <div class="card-body">
                    <i class="fa fa-user-lock fa-2x text-warning mb-2"></i>
                    <h5 class="fw-bold">@ViewBag.LockedUsers</h5>
                    <p class="text-muted mb-0">Đã khóa</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center shadow-sm border-0">
                <div class="card-body">
                    <i class="fa fa-user-shield fa-2x text-danger mb-2"></i>
                    <h5 class="fw-bold">@ViewBag.AdminCount</h5>
                    <p class="text-muted mb-0">Quản trị viên</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Bộ lọc -->
    <div class="card mt-4 shadow-sm border-0">
        <div class="card-body">
            <form method="get" asp-action="ListUser" class="row g-2">
                <div class="col-md-6">
                    <input type="text" name="search" class="form-control" placeholder="Tìm kiếm theo tên, email, số điện thoại..." />
                </div>
                <div class="col-md-3">
                    <select name="status" class="form-select">
                        <option value="">Tất cả trạng thái</option>
                        <option value="true">Đang hoạt động</option>
                        <option value="false">Đã khóa</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <select name="role" class="form-select">
                        <option value="">Tất cả vai trò</option>
                        <option value="1">Admin</option>
                        <option value="0">User</option>
                    </select>
                </div>
                <div class="col-md-1 d-grid">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-sync-alt"></i> Lọc
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Danh sách người dùng -->
    <div class="card mt-4 shadow-sm border-0">
        <div class="table-responsive">
            <table class="table align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>ID</th>
                        <th>Họ tên</th>
                        <th>Email</th>
                        <th>Số điện thoại</th>
                        <th>Vai trò</th>
                        <th>Trạng thái</th>
                        <th>Ngày tạo</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="8" class="text-center text-muted py-3">
                                <i class="fa fa-exclamation-circle me-2"></i> Không có người dùng nào được tìm thấy.
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.AccountId</td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <img src="~/images/default-avatar.png" class="rounded-circle me-2" width="35" height="35" />
                                        <strong>@user.FullName</strong>
                                    </div>
                                </td>
                                <td>@user.Email</td>
                                <td>@user.Phone</td>
                                <td>
                                    @if (user.Role == 1)
                                    {
                                        <span class="badge bg-danger">Admin</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">User</span>
                                    }
                                </td>
                                <td>
                                    @if (user.IsActive)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark">Locked</span>
                                    }
                                </td>
                                <td>@(user.CreatedDate?.ToString("dd/MM/yyyy") ?? "—")</td>
                                <td>
                                    <a href="@Url.Action("Edit", "Users", new { id = user.AccountId, area = "Admin" })"
                                       class="btn btn-sm btn-warning text-white" title="Chỉnh sửa">
                                        <i class="fa fa-edit"></i>
                                    </a>
                                    <a href="@Url.Action("ToggleActive", "Users", new { id = user.AccountId, area = "Admin" })"
                                       class="btn btn-sm @(user.IsActive ? "btn-outline-warning" : "btn-outline-success")" title="Khóa/Mở">
                                        <i class="fa @(user.IsActive ? "fa-lock" : "fa-unlock")"></i>
                                    </a>
                                    <a href="@Url.Action("Delete", "Users", new { id = user.AccountId, area = "Admin" })"
                                       class="btn btn-sm btn-danger" title="Xóa"
                                       onclick="return confirm('Bạn có chắc muốn xóa người dùng này không?');">
                                        <i class="fa fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>

            </table>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 20px !important;
    }

    .btn {
        border-radius: 12px !important;
    }

    .table td, .table th {
        vertical-align: middle;
    }
</style>
