@model DDH.Models.Product

@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Thêm sản phẩm mới";
}
<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: linear-gradient(135deg, #ffe6f0, #f9f7ff);
        min-height: 100vh;
    }

    h2 {
        text-align: center;
        margin-bottom: 25px;
        color: #5a2a5d;
        font-size: 22px;
        font-weight: 600;
    }

    form {
        max-width: 650px;
        margin: 40px auto;
        background: #ffffff;
        padding: 30px;
        border-radius: 15px;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.08);
        border-top: 5px solid #d63384;
        transition: 0.3s;
    }

    form:hover {
        transform: translateY(-3px);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.12);
    }

    label {
        font-weight: 600;
        display: block;
        margin-bottom: 6px;
        color: #6a097d;
        font-size: 15px;
    }

    input[type="text"],
    input[type="number"],
    input[type="file"],
    textarea,
    select {
        width: 100%;
        padding: 10px 12px;
        border: 1px solid #ccc;
        border-radius: 8px;
        font-size: 14px;
        transition: all 0.3s ease;
    }

    input:focus,
    textarea:focus,
    select:focus {
        border-color: #d63384;
        box-shadow: 0 0 6px rgba(214, 51, 132, 0.3);
        outline: none;
    }

    .btn-primary {
        background: linear-gradient(90deg, #d63384, #9b4dca);
        border: none;
        padding: 10px 20px;
        border-radius: 8px;
        color: white;
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .btn-primary:hover {
        background: linear-gradient(90deg, #c21868, #8134af);
        transform: scale(1.05);
    }

    .btn-secondary {
        background-color: #bbb;
        border: none;
        border-radius: 8px;
        transition: 0.3s;
        color: white;
    }

    .btn-secondary:hover {
        background-color: #999;
    }

    .card-header {
        background: linear-gradient(90deg, #d63384, #9b4dca);
        border-radius: 10px 10px 0 0 !important;
    }

    .card-header h4 {
        font-weight: 600;
        color: #fff;
    }

    .alert-success {
        background-color: #f3f8f3;
        color: #2ecc71;
        border-left: 4px solid #2ecc71;
    }

    .alert-danger {
        background-color: #fdecef;
        color: #e74c3c;
        border-left: 4px solid #e74c3c;
    }

    small.form-text {
        color: #6c757d;
        font-style: italic;
    }

    .d-flex.justify-content-between {
        margin-top: 25px;
    }

    .form-control:hover, .form-select:hover {
        border-color: #e26ba3;
    }

    #imagePreview img {
        border: 2px solid #f3cce3;
        transition: 0.3s;
    }

    #imagePreview img:hover {
        transform: scale(1.03);
        box-shadow: 0 3px 10px rgba(0,0,0,0.15);
    }
</style>



<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-plus me-2"></i>Thêm sản phẩm mới
                    </h4>
                </div>
                <div class="card-body">
                    @* ✅ Hiển thị thông báo lỗi *@
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @using (Html.BeginForm("CreateProducts", "Products", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    @Html.LabelFor(m => m.Name, "Tên sản phẩm *", new { @class = "form-label" })
                                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Nhập tên sản phẩm" })
                                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    @Html.LabelFor(m => m.Price, "Giá bán *", new { @class = "form-label" })
                                    @Html.TextBoxFor(m => m.Price, new { @class = "form-control", type = "number", min = "0", step = "0.01" })
                                    @Html.ValidationMessageFor(m => m.Price, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    @Html.LabelFor(m => m.Stock, "Số lượng tồn kho *", new { @class = "form-label" })
                                    @Html.TextBoxFor(m => m.Stock, new { @class = "form-control", type = "number", min = "0" })
                                    @Html.ValidationMessageFor(m => m.Stock, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="mb-3">
                                    @Html.LabelFor(m => m.IsActive, "Trạng thái sản phẩm", new { @class = "form-label" })
                                    @Html.DropDownListFor(m => m.IsActive, new List<SelectListItem>
                                    {
                                        new SelectListItem { Text = "Hiển thị", Value = "true", Selected = true },
                                        new SelectListItem { Text = "Ẩn", Value = "false" }
                                    }, new { @class = "form-select" })
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                  <label class="form-label">Thương hiệu *</label>
                                    <select class="form-select" name="BrandId" required>
                                        <option value="">Chọn thương hiệu</option>
                                        @foreach (var brand in ViewBag.Brands)
                                        {
                                            <option value="@brand.BrandId">@brand.Name</option>
                                        }
                                    </select>
                                    <span asp-validation-for="BrandId" class="text-danger"></span>
                                </div>
                            </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Danh mục *</label>
                                    <select class="form-select" name="CategoryId" required>
                                        <option value="">Chọn danh mục</option>
                                        @foreach (var category in ViewBag.Categories)
                                        {
                                            <option value="@category.CategoryId">@category.Name</option>
                                        }
                                    </select>
                                </div>
                            </div>
                        

                        <div class="mb-3">
                            @Html.LabelFor(m => m.Description, "Mô tả sản phẩm", new { @class = "form-label" })
                            @Html.TextAreaFor(m => m.Description, 3, 50, new { @class = "form-control", placeholder = "Nhập mô tả sản phẩm..." })
                        </div>
<div class="mb-3">
    <label class="form-label">Hình ảnh sản phẩm</label>
    <input type="file" name="imageFile" class="form-control" accept="image/*" onchange="previewImage(event)" />
    <small class="form-text text-muted">Chỉ chấp nhận JPG, PNG hoặc GIF.</small>
    <div id="imagePreview" class="mt-3 text-center"></div>
</div>

<script>
    function previewImage(event) {
        const file = event.target.files[0];
        if (file) {
            const reader = new FileReader();
            reader.onload = e => {
                document.getElementById('imagePreview').innerHTML = 
                    `<img src="${e.target.result}" alt="Preview" style="max-width:200px;border-radius:10px;box-shadow:0 2px 6px rgba(0,0,0,0.2);" />`;
            };
            reader.readAsDataURL(file);
        }
    }
</script>


                        <div class="d-flex justify-content-between">
                            <a asp-action="ListProducts" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Quay lại
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Tạo sản phẩm
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Ẩn alert sau 5 giây
        setTimeout(() => $('.alert').fadeOut('slow'), 5000);
    </script>
}
