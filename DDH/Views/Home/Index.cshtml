@model IEnumerable<DDH.Models.Product>

@{
    ViewData["Title"] = "Trang chủ | Shop Quần Áo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">

    <!-- Banner -->
    <div class="text-center p-5 bg-light rounded-3 mb-4 shadow-sm">
        <h1 class="display-5 fw-bold text-primary">🛍️ Shop Quần Áo Trực Tuyến</h1>
        <p class="lead mt-3 mb-4 text-muted">
            Cập nhật xu hướng thời trang mới nhất – phong cách, chất lượng và giá tốt!
        </p>
    </div>

    <!-- Bộ lọc tìm kiếm -->
    <div class="row mb-4">
        <div class="col-md-3">
            <input type="text" id="search" class="form-control"
                   value="@ViewBag.Keyword"
                   placeholder="Tìm sản phẩm...">
        </div>
        <div class="col-md-2">
            <select id="category" class="form-select">
                <option value="">--Danh mục--</option>
                @foreach (var cat in ViewBag.Categories ?? new List<DDH.Models.Category>())
                {
                    <option value="@cat.CategoryId">@cat.Name</option>
                }
            </select>
        </div>
        <div class="col-md-2">
            <select id="brand" class="form-select">
                <option value="">--Thương hiệu--</option>
                @foreach (var br in ViewBag.Brands ?? new List<DDH.Models.Brand>())
                {
                    <option value="@br.BrandId">@br.Name</option>
                }
            </select>
        </div>
        <div class="col-md-2">
            <input type="number" id="minPrice" class="form-control" placeholder="Giá từ">
        </div>
        <div class="col-md-2">
            <input type="number" id="maxPrice" class="form-control" placeholder="Đến">
        </div>
        <div class="col-md-1">
            <button id="btnFilter" class="btn btn-primary w-100">Lọc</button>
        </div>
    </div>

    <!-- Danh mục nổi bật -->
    <h2 class="text-center mb-4 fw-semibold">Danh mục nổi bật</h2>
    <div class="row text-center mb-5">
        <div class="col-md-4 mb-3">
            <div class="card h-100 border-0 shadow-sm">
                <img src="https://cdn-icons-png.flaticon.com/512/2974/2974198.png" class="card-img-top p-4" style="height:180px; object-fit:contain;" />
                <div class="card-body">
                    <h5 class="card-title fw-bold">Thời trang Nam</h5>
                    <a href="/Products?category=nam" class="btn btn-outline-primary btn-sm">Xem ngay</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card h-100 border-0 shadow-sm">
                <img src="https://cdn-icons-png.flaticon.com/512/2974/2974163.png" class="card-img-top p-4" style="height:180px; object-fit:contain;" />
                <div class="card-body">
                    <h5 class="card-title fw-bold">Thời trang Nữ</h5>
                    <a href="/Products?category=nu" class="btn btn-outline-primary btn-sm">Khám phá</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card h-100 border-0 shadow-sm">
                <img src="https://cdn-icons-png.flaticon.com/512/2974/2974209.png" class="card-img-top p-4" style="height:180px; object-fit:contain;" />
                <div class="card-body">
                    <h5 class="card-title fw-bold">Thời trang Trẻ em</h5>
                    <a href="/Products?category=tre-em" class="btn btn-outline-primary btn-sm">Mua ngay</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Sản phẩm nổi bật / kết quả tìm kiếm -->
    <h2 class="text-center mb-4 fw-semibold">
        @(string.IsNullOrEmpty(ViewBag.Keyword) ? "Sản phẩm nổi bật" : $"Kết quả tìm kiếm cho: \"{ViewBag.Keyword}\"")
    </h2>

    <div class="row text-center">
        @if (Model != null && Model.Any())
        {
            @foreach (var item in Model)
            {
                <div class="col-md-3 mb-4">
                    <div class="card h-100 shadow-sm border-0 position-relative">
                        <!-- Nút yêu thích -->
                        <button type="button"
                                class="btn btn-light position-absolute top-0 end-0 m-2 favorite-btn"
                                data-id="@item.ProductId"
                                title="Thêm vào yêu thích">
                            <i class="bi bi-heart"></i>
                        </button>

                        <img src="@item.ImageUrl" class="card-img-top" style="height:220px; object-fit:cover;" alt="@item.Name" />
                        <div class="card-body">
                            <h6 class="card-title fw-bold">@item.Name</h6>
                            <p class="text-danger fw-bold">@item.Price.ToString("N0") ₫</p>

                            <div class="d-flex justify-content-between">
                                <a href="/Products/Details/@item.ProductId" class="btn btn-sm btn-outline-secondary">
                                    <i class="bi bi-eye"></i> Chi tiết
                                </a>

                                <form asp-controller="Cart" asp-action="AddToCart" method="post" class="m-0">
                                    <input type="hidden" name="productId" value="@item.ProductId" />
                                    <button type="submit" class="btn btn-sm btn-primary">
                                        <i class="bi bi-cart-plus"></i> Thêm
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="alert alert-warning text-center shadow-sm">
                    Không tìm thấy sản phẩm nào phù hợp với từ khóa
                    <strong>@ViewBag.Keyword</strong>.
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        // Yêu thích
        $(document).on('click', '.favorite-btn', function () {
            const btn = $(this);
            const id = btn.data('id');

            $.post('/Favorites/Add', { productId: id }, function (res) {
                if (res.success) {
                    btn.find('i').toggleClass('bi-heart bi-heart-fill');
                } else {
                    alert('Vui lòng đăng nhập để thêm vào yêu thích.');
                }
            }).fail(() => {
                alert('Có lỗi xảy ra khi thêm vào yêu thích.');
            });
        });

        // Lọc / Tìm kiếm
        $("#btnFilter").click(function () {
            const search = $("#search").val();
            const category = $("#category").val();
            const brand = $("#brand").val();
            const minPrice = $("#minPrice").val();
            const maxPrice = $("#maxPrice").val();

            const url = `/Home/Index?search=${encodeURIComponent(search)}&categoryId=${category}&brandId=${brand}&minPrice=${minPrice}&maxPrice=${maxPrice}`;
            window.location.href = url;
        });
    </script>
}

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f8f9fa;
    }

    h1, h2 {
        color: #333;
    }

    .card {
        transition: all 0.3s ease;
    }

        .card:hover {
            transform: scale(1.03);
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }

    .btn-primary {
        background-color: #4B49AC;
        border: none;
    }

        .btn-primary:hover {
            background-color: #3c3aa7;
        }

    .btn-outline-secondary {
        border-color: #aaa;
        color: #555;
    }

        .btn-outline-secondary:hover {
            background-color: #eee;
        }

    .favorite-btn {
        border-radius: 50%;
        background-color: white;
        box-shadow: 0 0 6px rgba(0,0,0,0.15);
        transition: all 0.2s ease;
    }

        .favorite-btn i {
            color: #dc3545;
            font-size: 1.2rem;
        }

        .favorite-btn:hover {
            transform: scale(1.1);
            background-color: #f8f9fa;
        }
</style>
